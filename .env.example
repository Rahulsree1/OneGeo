# Flask
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# Database - Supabase (preferred)
# Paste from Supabase: Project Settings > Database > Connection string (URI)
# Use Transaction pooler (port 6543) for serverless, or Direct (5432) for long-lived connections
DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?sslmode=require

# Or standard PostgreSQL (fallback)
# DB_USER=postgres
# DB_PASSWORD=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=las_well_logs

# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=las-well-logs

# Frontend (optional, for build)
REACT_APP_API_URL=http://localhost:5000
